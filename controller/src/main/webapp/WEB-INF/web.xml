<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!--Filters-->

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.jwd.controller.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AntiInjectionFilter</filter-name>
        <filter-class>com.jwd.controller.filters.AntiInjectionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AntiInjectionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.jwd.controller.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Servlet-->

    <servlet>
        <servlet-name>FrontServlet</servlet-name>
        <servlet-class>com.jwd.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/registerPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/basket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/loginPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>